<div class="container main-body">
  <div class="d-flex justify-content-between">
    <div>
      <h2>All our flats</h2>
      <h5><%= "Viewing #{@flats.count} flats" %></h5>
    </div>
  </div>
  <div class="d-flex align-content-start flex-wrap">
    <% @flats.each do |flat| %>
      <div class="card me-4 mb-4 rounded-4 shadow" style="width: 25rem;">
        <img class="card-img-top" src="https://picsum.photos/200" alt="Card image cap">
        <div class="card-body">
          <h3 class="card-title"><%= link_to flat.name, flat_path(flat) %></h3>
          <div class="d-flex justify-content-center">
            <p class="card-subtitle mb-2" style="font-size: 20px;"><i class="fas fa-user-friends"></i><%= flat.number_of_guests %></p>
            <p class="card-subtitle mb-2" style="font-size: 20px;">$<%= flat.price_per_night.to_s %></p>
          </div>
          <div class="d-flex justify-content-around">
            <p class="btn btn-primary"><%= link_to 'More info', flat_path(flat) %></p>
            <p class="btn btn-primary"><%= link_to 'Edit', edit_flat_path(flat) %></p>
            <p class="btn btn-primary"><%= link_to 'Delete', flat_path(flat), method: :delete, data: { confirm: "Are you sure?" } %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
