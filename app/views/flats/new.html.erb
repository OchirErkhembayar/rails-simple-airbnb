<h2 style="text-align: center;" class="mt-4">Add a new flat</h2>

<div class="container main-body" style="width: 700px;">
  <%= form_for(@flat) do |f| %>
  <div class="form-group mt-3">
    <%= f.label :name, class: "form-label mt-1" %>
    <%= f.text_field :name, class: "form-control mt-1" %>
    </div>
    <div class="form-group">
    <%= f.label :address, class: "form-label mt-1" %>
    <%= f.text_field :address, class: "form-control mt-1" %>
    </div>
    <div class="form-group">
    <%= f.label :price_per_night, class: "form-label mt-1" %>
    <%= f.text_field :price_per_night, class: "form-control mt-1" %>
    </div>
    <div class="form-group">
    <%= f.label :number_of_guests, class: "form-label mt-1" %>
    <%= f.text_field :number_of_guests, class: "form-control mt-1" %>
    </div>
    <%= f.submit "Create", class: "btn btn-primary my-3 w-100" %>
  <% end %>
</div>
